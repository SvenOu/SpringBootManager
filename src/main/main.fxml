<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import view.AppListView?>

<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Controller">
    <AnchorPane>
        <VBox spacing="10">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button fx:id="refreshAppListBtn" alignment="CENTER" mnemonicParsing="false" prefWidth="80" text="Refresh">
               <HBox.margin>
                  <Insets left="10.0" top="10.0" />
               </HBox.margin></Button>
                <Label style="-fx-text-fill: red; -fx-font-size: 20" text="Spring boot apps：">
                   <VBox.margin>
                      <Insets left="10.0" right="10.0" />
                   </VBox.margin>
                </Label>
                <Label fx:id="bootAppDir" prefWidth="920" style="-fx-font-size: 20">
                   <VBox.margin>
                      <Insets left="10.0" right="10.0" />
                   </VBox.margin>
                </Label>
            </HBox>
            <VBox alignment="CENTER_LEFT" spacing="10">
                <AppListView fx:id="springBootAppList" prefHeight="180" prefWidth="1216" />
            </VBox>
        </VBox>

        <HBox fx:id="loadingPanel" alignment="CENTER" prefHeight="220" prefWidth="1216" style="-fx-background-color: rgba(0, 0, 0, 0.5);" visible="false">
            <Label text="Loading...">
                <font>
                    <Font size="36.0" />
                </font>
            </Label>
        </HBox>
    </AnchorPane>
    <AnchorPane prefHeight="440" prefWidth="1216">
        <TextArea fx:id="consoleText" editable="false" prefHeight="440" prefWidth="1216" style="-fx-control-inner-background:#cce6cf;   -fx-highlight-text-fill: #cce6cf;  " wrapText="true" />
        <Button fx:id="clearConsoleBtn" layoutX="953.0" layoutY="14.0" mnemonicParsing="false" text="清空控制台" />
        <Button fx:id="openCmdBtn" layoutX="1065.0" layoutY="14.0" mnemonicParsing="false" text="打开系统命令行" />
    </AnchorPane>
</VBox>
